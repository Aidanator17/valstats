<head></head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Maps</title>
<link rel="stylesheet" href="/css/<%= 'lookup-style.css' %>">
</head>

<body>
  <div class="container">
    <form action="/map/lookup" method="POST" class="form">
      <div class="input-group">
        <h3>Map Stats!</h3>
        <select name="act" class="input-field">
          <% for (ep in episodes){ if (ep<(episodes.length - 1)){ for (a in episodes[ep]['acts'].reverse()){ if (episodes[ep]['acts'][a]['count']>0){ %>
            <option value="<%= episodes[ep]['acts'][a]['id'] %>">
              <%= episodes[ep]['name'] %>
                <%= episodes[ep]['acts'][a]['name'] %>
                  <% if (a==0 && ep==0){ %> (current)
                      <% } %><%= '('+episodes[ep]['acts'][a]['count']+' matches)' %>
            </option>
            <% }}}else{ if (episodes[ep]['count']>0){%>
              <option value="<%= episodes[ep]['id'] %>">
                <%= episodes[ep]['name'] %>
                  <%= '('+episodes[ep]['count']+' matches)' %>
              </option>
              <% }}} %>
        </select>
      </div>
      <% if (failed){ %>
        <p id="not-found">User not found</p>
        <% } %>
          <button type="submit" class="submit-button">Submit</button>
    </form>
  </div>
</body>