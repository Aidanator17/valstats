        //     `;

        //     const form = document.getElementById('user-lookup-form');
        //     const plusButton = document.getElementById('add-more');
        //     plusButton.remove();
        //     form.insertBefore(newInputGroup, form.querySelector('.submit-button'));
        // });
        function addUserField () {
            count++;
            const newInputGroup = document.createElement('div');
            newInputGroup.classList.add('input-group');
            newInputGroup.innerHTML = `
                <input placeholder="User${count}" name="user${count}" class="input-field">
                <input placeholder="Tag${count}" name="tag${count}" class="input-field">
                <button type="button" onclick="addUserField()" class="plus-button" id="add-more">+</button>
            `;

            const form = document.getElementById('user-lookup-form');
            const plusButton = document.getElementById('add-more');
            plusButton.remove();
            form.insertBefore(newInputGroup, form.querySelector('.submit-button'));
        }
    </script>
</body>
